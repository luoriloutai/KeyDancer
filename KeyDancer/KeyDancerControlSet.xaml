<UserControl x:Class="KeyDancer.KeyDancerControlSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="clr-namespace:KeyDancer" Padding="4">
    <Border BorderBrush="#FF9BB7E5" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Height="24" VerticalAlignment="Top" HorizontalContentAlignment="Right" x:Name="Label" Padding="4" HorizontalAlignment="Right">Label:</Label>
            <my:KeyDancerComboBox  Height="24" VerticalAlignment="Top" Grid.Column="1" x:Name="Container" HorizontalAlignment="Left" Width="60" Margin="0,1,0,0" />
        </Grid>
    </Border>
</UserControl>
